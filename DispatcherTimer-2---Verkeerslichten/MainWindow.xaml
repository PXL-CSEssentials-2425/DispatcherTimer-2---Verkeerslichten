<Window x:Class="DispatcherTimer_2___Verkeerslichten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DispatcherTimer_2___Verkeerslichten"
        mc:Ignorable="d"
        Title="" Height="460" ResizeMode="NoResize" SizeToContent="Width">
    <Canvas Width="100px">
        <StackPanel>
            <Image Name="redImage" Source="Rood.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Image Name="orangeImage" Source="Oranje.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Image Name="greenImage" Source="Groen.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Label Name="infoLabel" Content="" FontSize="48" FontWeight="Bold" Width="100px"></Label>
            <Button Name="startButton" Content="Start" Click="startButton_Click" Width="100px" Height="50px" HorizontalAlignment="Left"></Button>
        </StackPanel>
    </Canvas>
</Window>
